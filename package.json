{
  "name": "tempo-invoices",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently -k \"pnpm:dev:server\" \"pnpm:dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "pnpm build:client --watch",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "esbuild src/client/index.tsx --bundle --sourcemap --outfile=public/assets/bundle.js",
    "build:server": "pnpm exec tsc -p tsconfig.json",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tempo.ts": "^0.11.1",
    "viem": "^2.43.2",
    "wagmi": "^3.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}