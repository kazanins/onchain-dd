{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "pnpm build",
  "builds": [
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["public/**"] }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "dist/server/index.js" }
  ],
  "crons": [
    { "path": "/api/cron/mark-paid", "schedule": "* * * * *" }
  ]
}
